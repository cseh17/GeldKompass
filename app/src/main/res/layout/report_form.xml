<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/report_form"
    android:background="@android:color/white">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="75dp"
        android:text="@string/report_title"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/rf_first_parameter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 1"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:paddingTop="30dp"
        android:paddingStart="40dp"/>

    <Spinner
        android:id="@+id/question1_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_border"/>

    <TextView
        android:id="@+id/rf_second_parameter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 2"
        android:textSize="25sp"
        android:paddingTop="20dp"
        android:paddingStart="40dp"/>

    <Spinner
        android:id="@+id/question2_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_border"/>

    <Button
        android:layout_width="104dp"
        android:layout_height="31.56dp"
        android:id="@+id/rf_submit_button"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="40dp"
        android:textColor="#ffffffff"
        android:background="@drawable/submit_btn"
        android:textSize="16sp"
        android:text="Submit"
        android:focusable="false"/>

    <ProgressBar
        android:id="@+id/rf_progressLoader"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorSecondary"
        />

</LinearLayout>